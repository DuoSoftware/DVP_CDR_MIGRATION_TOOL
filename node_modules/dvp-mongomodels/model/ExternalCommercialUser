var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var uniqueValidator = require('mongoose-unique-validator');
var ObjectId = Schema.ObjectId;

var contactSchema = new Schema({
    contact:String,
    type:String,
    display: String,
    verified: Boolean,
    raw: {}
}, {_id: false});

var externalCommercialUserSchema = new Schema({
    name: String,
    title: String,
    avatar: String,
    birthday: Date,
    gender: String,
    address: {
        zipcode: String,
        number: String,
        street: String,
        city: String,
        province: String,
        country: String,
    },
    firstname: { type: String, required: true },
    lastname: { type: String, required: true },
    locale: String,
    ssn:  {type: String, sparse: true},
    password: String,
    phone: {type: String, required: true},
    email: {type: String, sparse: true},
    landnumber: String,
    facebook: String,
    twitter: String,
    linkedin: String,
    googleplus: String,
    skype: String,
    thirdpartyreference: String,
    company: { type: Number, required: true },
    tenant: { type: Number, required: true },
    contacts: [contactSchema],
    api_contacts: [contactSchema],
    tags: [String],
    custom_fields: [{field:{type:String, require: true},value:{},_id: false}],
    form_submission: {type: ObjectId,ref: 'FormSubmission'},
    created_at: Date,
    updated_at: Date
});

externalCommercialUserSchema.plugin(uniqueValidator);
externalCommercialUserSchema.index({firstname:"text", lastname:"text", phone:"text", email:"text"});
externalCommercialUserSchema.index({"contacts.type" : 1,"contacts.contact" : 1});
//fileSlotSchema.index({ company: 1, tenant: 1, ssn: 1, phone: 1, email: 1}, { unique: true });
var ExternalCommercialUser = mongoose.model('ExternalCommercialUser', externalCommercialUserSchema);
module.exports = ExternalCommercialUser;

